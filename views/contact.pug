extends layout

block content

    h1 #{title}
    //-h5 You can contact me at:
    ul
        li 
            a(href="mailto:nathanjdriscoll1@gmail.com?subject=message%20from%20website") nathanjdriscoll1@gmail.com
            placeholder  - send me an email!
        li 
            //- target _blank - open link in new tab. rel - prevent security vuln
            a(href="https://github.com/nathand99" target="_blank" rel="noopener noreferrer") GitHub
            placeholder  - check out my GitHub profile and repos
        li 
            a(href="https://www.linkedin.com/in/nathan-driscoll-8720b4165/" target="_blank" rel="noopener noreferrer") LinkedIn
            placeholder  - check out my LinkedIn profile
    br
    //- contact form
    div(class='widget ContactForm' data-version='2' id='ContactForm1')
        h4(class='title') Alternatively use this contact form to send me a message
        <div class='contact-form-widget'>
            <div class='form'>
                <form name='contact-form'>
                    <span>Name</span>
                    br
                    <input class='contact-form-name' id='ContactForm1_contact-form-name' name='name' size='30' type='text' value=''/>
                    br
                    br
                    <span>Email</span><span style='font-weight: bolder;'> *</span>
                    <br/>
                    <input class='contact-form-email' id='ContactForm1_contact-form-email' name='email' size='30' type='text' value=''/>
                    br
                    br
                    <span>Message</span><span style='font-weight: bolder;'> *</span>
                    <br/>
                    <textarea class='contact-form-email-message' cols='29' id='ContactForm1_contact-form-email-message' name='email-message' rows='5' value=''></textarea>
                    <p></p>
                    <input class='contact-form-button contact-form-button-submit' id='ContactForm1_contact-form-submit' type='button' value='Send'/>
                    <p></p>
                    <div style='text-align: center; max-width: 222px; width: 100%'>
                        <p class='contact-form-error-message' id='ContactForm1_contact-form-error-message'></p>
                        <p class='contact-form-success-message' id='ContactForm1_contact-form-success-message'></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

  
